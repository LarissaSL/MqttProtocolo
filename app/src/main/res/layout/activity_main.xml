<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mqtt_protocol_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MQTT Protocolo"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/send_msg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/mqtt_protocol_title"
        android:hint="Digite a Mensagem aqui"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:text="Enviar" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Histórico de Mensagens do Tópico"
        android:layout_below="@id/send_button"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/received_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/msg"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>